{% extends 'accueil.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block head %}Utilisateur{% endblock %}

{% block body %}
  
    <div class="container col-md-12">
        
        <div class="row">
            <div class="container col-md-6">
            <div class="card">
                <h4 class="card-header text-center">Liste des utilisateurs</h4>
                <div class="card-body">
                    <table class="table table-bordered">
                        <th>ID</th>
                        <th>PRENOM</th>
                        <th>NOM</th>
                        <th>EMAIL</th>
                        {# <th>RÃ”LE</th> #}
                    {% for u in utilisateurs %}
                        <tr>
                            <td>{{ u.id }}</td>
                            <td>{{ u.prenom }}</td>
                            <td>{{ u.nom }}</td>
                            <td class="text-left">{{ u.email }}</td>
                             <td>
                                 {% for roles in u.roles %}
                                    {{ roles }}
                                {% endfor %}
                             </td>
                        </tr>
                    {% endfor %}
                    </table>
                </div>
            </div>
        </div>
         <div class="container col-md-6">
            <div class="card ">
                <h4 class="card-header text-center">Formulaire d'ajout d'un utilisateur</h4>
                <div class="card-body mt-3">
                     {{ form(form) }} 
                </div>
            </div>
        </div>

    </div>
{% endblock %}
